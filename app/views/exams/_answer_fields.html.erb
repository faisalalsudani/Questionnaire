<div class='nested-fields'>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :correct, 'correct' %>
    <%= f.radio_button :correct, "correct", id: "correct" %>
  </div>

  <span><%= link_to_remove_association "remove answer", f, class: 'btn btn-danger' %></span>
  <br>
</div>
