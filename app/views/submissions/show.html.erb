<div class="row">
  <h4><%= @exam.title %></h4>
  <hr>
  <% @gevaarsvragen = 0 %>
  <% @restvragen = 0 %>
  <%= @submission.ann.length %>
  <% @exam.questions.each do |question| %>
    <p><% question.id %></p>
    <% @submission.ann.each do |key, value| %>
      <% @key = key %>
      <% if question.id == key.to_i %>
        <%= question.timer %>
        <p>Given answer: <%= @given_anwer = value %></p>
        <p><% @correct = question.correct.to_i - 1 %></p>
        <p>Correct answer: <%= @correct_answer = question.answers[@correct] %></p>
        <p>Resulte: <%= @correct_answer == @given_anwer %></p>
        <% if question.timer == true %>
          <% if @correct_answer == @given_anwer %>
            <% @gevaarsvragen = @gevaarsvragen + 1 %>
          <% end %>
        <% else %>
          <% if @correct_answer == @given_anwer %>
            <% @restvragen = @restvragen + 1 %>
          <% end %>
        <% end %><!-- if question.timer == true -->
        <hr>
      <% end %><!-- if question.id == key -->
    <% end %><!-- submission.ann.each -->
  <% end %><!-- exam.questions.each -->
  <hr>
  <p>Gevaarherkenning: <%= @gevaarsvragen %> goed van <%= @exam.questions.where(timer: true).length %></p>
  <p>Rest: <%= @restvragen %> goed van <%= @exam.questions.where(timer: false).length %></p>
  <hr>
  <% if @gevaarsvragen > (@exam.questions.length / 2) %>
    <p>Congrats</p>
  <% end %>
</div>
