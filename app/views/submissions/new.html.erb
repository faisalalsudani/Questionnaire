<%= form_for [@exam, @submission]  do |f| %>


<% @questions.each do |question| %>
  <p><%= question.title %></p>
  <% question.answers.each do |answer| %>
    <p><%= answer.title %> <span><%= f.radio_button :answers, "#{answer.id}", id: "q1"%></span></p>
  <% end %>
<% end %>


<%= f.radio_button :answers, 6, id: "size_1"%>
<%= f.label :answers, '6'%>
<%= f.radio_button :answers, 7, id: "size_1"%>
<%= f.label :answers, '7'%>

<br>
<br>
<%= f.hidden_field :user_id, :value => current_user.id %>
<%= f.submit "Submit", class: "btn  btn-primary " %>
<% end %>
