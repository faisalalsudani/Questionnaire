<%= form_for [@exam, @submission]  do |f| %>
<div id="timer"></div>

<div class="wizard" data-initialize="wizard" id="questionFrom">
<div class="steps-container">
	<ul class="steps">
    <% @questions.each_with_index do |question, index| %>
		<li data-step="<%= index + 1 %>" data-name="campaign" class="active">
			<span class="badge"><%= index + 1 %></span>
			<span class="chevron"></span>
		</li>
    <% end %>
    <div class="step-content questions">
        <%= render "question" %>
    </div>
	</ul>
</div>

<div class="actions">
  	<button type="button" class="btn btn-default btn-prev">Prev</button>

    <button type="button" class="btn btn-primary btn-next">Next</button>
    <%= f.submit "Submit", class: "btn btn-primary btn-submit" %>
</div>
</div>
<%= f.hidden_field :user_id, :value => current_user.id %>
<% end %>
